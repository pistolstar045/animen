<h2>ユーザーリスト</h2>
 <table class="table table-sm user-index">
      <thead>
        <tr>
          <th>プロフィール画像</th>
          <th>名前</th>
          <th>紹介文</th>
          <th colspan="3"></th>
        </tr>
  	   </thead>
  	   <tbody>
  	  	 <% @customers.each do |customer| %>
  	  	 <tr>
  	      <td>
  	       <% if customer.profile_image.attached? %>
            <%= image_tag customer.profile_image, size: "80x80" %>
           <% else %>
            <%= image_tag 'no_image.jpg', size: "80x80" %>
           <% end %>
          </td>
          <td><%= customer.name %></td>
          <td><%= customer.introduction %></td>
	  	  </tr>
	  	  <% end %>
  	  </tbody>
  	 </table>


