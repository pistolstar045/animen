<h2><%= @group.name %>へようこそ</h2>
 <table class='table table-hover table-inverse'>
  <thead>
   <tr>
    <th></th>
    <th>グループ名</th>
    <th>紹介文</th>
    <th></th>
    <th colspan="3"></th>
   </tr>
  </thead>
   <tr>
    <td><%= image_tag @group.get_image, size: '50x50' %></td>
    <td><%= @group.name %></td>
    <td><%= @group.introduction %></td>
    <% if @group.is_owned_by?(current_customer) %>
    <td>
     <%= link_to 'グループの編集', edit_group_path(@group), class: "btn btn-sm btn-success" %>
    </td>
    <% else %>
     <td>
      <% if @group.includesCustomer?(current_customer)%>
       <%= link_to 'グループから抜ける', group_group_customers_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
      <% else %>
       <%= link_to 'このグループに参加する', group_group_customers_path(@group), method: :post, class: "btn btn-sm btn-success" %>
      <% end %>
     </td>
    <% end %>
   </tr>
  </table>
  
  <p><%= link_to "グループ一覧", groups_path, class: "btn btn-info" %>　へ戻る</p>







