<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>アニメ編集</h1>
     
     <%= form_with model: @anime do |f| %>
  <div class="form-group">
   <div class="image"><%= f.label :"画像" %></div>
    <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
  </div>   
     
  <div class="form-group">
    <div class="title"><%= f.label :"タイトル" %></div>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
  	<div class="body"><%= f.label :"感想" %></div>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="button">
    <%= f.submit class: "btn  btn-success" %>
    </div>
    <% end %>
    <div class="menu">
      <%= link_to "Show", anime_path(@anime) %>
      |
      <%= link_to "Back", animes_path %>
    </div>
  <div class="col-xs-3"></div>
 </div>
 </div>
 
 