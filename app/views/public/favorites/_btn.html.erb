<% if anime.favorited_by?(current_customer) %>
 <%= link_to anime_favorites_path(anime),method: :delete do %>
  <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
  <%= anime.favorites.count %>
 <% end %>
<% else %>
 <%= link_to anime_favorites_path(anime), method: :post do %>
  <i class="fas fa-heart" aria-hidden="true"></i>
  <%= @anime.favorites.count %>
 <% end %>
<% end %>

