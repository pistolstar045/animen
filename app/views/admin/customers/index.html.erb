<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-11 col-lg-8  mx-auto">
   <br>
     <h4><span class="bg-light">会員一覧<span></h4>
      <table class='table'>
       <thead class="table table-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
        </tr>
       </thead>
         <tbody>
           <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.name,admin_customer_path(customer.id) %></td>
            </tr>
           <% end %>
　       </tbody>
      </table>
  </div>
</div>
